<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:background="@color/gray0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_favorite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/favourite"
                />
            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>
        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/profile"
                />
            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>

        <LinearLayout
            android:id="@+id/ll_language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/language_settings"
                />
            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>




        <LinearLayout
            android:id="@+id/ll_terms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/terms_and_conditions"
                />
            <ImageView
                android:id="@+id/arrow4"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>


        <LinearLayout
            android:id="@+id/ll_policy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/delivery_policy"
                />
            <ImageView
                android:id="@+id/arrow5"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>


        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/interesting_questions"
                />
            <ImageView
                android:id="@+id/arrow6"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>


        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:clickable="false"
                android:longClickable="false"
                android:text="@string/about_tour"
                />
            <ImageView
                android:id="@+id/arrow7"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent"
                android:src="@drawable/black_right_arrow"
                android:padding="17dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_instagram"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/instagram"
                />
            <ImageView
                android:id="@+id/image_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/twitter"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/image_snapchat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/snapchat"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>