<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/bg"
    tools:context=".activities_fragments.activity_sign_up.SignUpActivity"
    android:id="@+id/root"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:padding="3dp"
                android:src="@drawable/green_left_arrow"
                android:clickable="false"
                android:longClickable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="@string/back"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                tools:ignore="RtlCompat"
                android:clickable="false"
                android:longClickable="false"
                />

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/user"
                        android:padding="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:text="@string/personal_information"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_sign_up_bg"
                    android:inputType="text"
                    android:textColorHint="@color/gray"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="@string/full_name"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/gray_circle"

                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_personal"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:civ_border_width="2dp"
                            app:civ_fill_color="@color/white"
                            app:civ_border_color="@color/gray"
                            />
                        <ImageView
                            android:id="@+id/image_icon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/upload"
                            android:padding="8dp"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/upload_personal_photo"
                            android:layout_marginBottom="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:text="@string/_500_500_pixel"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_sign_up_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:src="@drawable/mail"
                        android:padding="10dp"
                        />
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:hint="@string/email_address"
                        android:textColorHint="@color/gray"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_sign_up_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:src="@drawable/map"
                        android:padding="9dp"
                        />
                    <EditText
                        android:id="@+id/edt_country"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:hint="@string/country"
                        android:textColorHint="@color/gray"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/phone"
                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:text="@string/phone"
                        android:paddingStart="8dp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_sign_up_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="+966"

                        />
                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:hint="533332583"
                        android:textColorHint="@color/gray"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_sign_up_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:src="@drawable/lock"
                        android:padding="10dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        app:errorEnabled="false"
                        app:counterEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:passwordToggleEnabled="true"
                        app:hintEnabled="false"
                        app:passwordToggleTint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"
                        >
                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:inputType="textPassword"
                            android:hint="********"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_login_bg"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:clickable="false"
                        android:longClickable="false"
                        >
                        <ImageView
                            android:id="@+id/image_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/white_left_arrow"
                            android:padding="5dp"
                            android:clickable="false"
                            android:longClickable="false"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:paddingStart="5dp"
                            android:text="@string/sign_up"
                            tools:ignore="RtlCompat"
                            android:clickable="false"
                            android:longClickable="false"
                            />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>